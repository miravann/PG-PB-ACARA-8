<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_navigation"
    app:startDestination="@id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.concertticket.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_listFragment"
            app:destination="@id/listFragment" />
    </fragment>

    <fragment
        android:id="@+id/orderFragment"
        android:name="com.example.concertticket.OrderFragment"
        android:label="Order"
        tools:layout="@layout/fragment_order">
        <action
            android:id="@+id/action_orderFragment_to_ticketFragment"
            app:destination="@id/nav_ticket" />
    </fragment>

    <fragment
        android:id="@+id/nav_profile"
        android:name="com.example.concertticket.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/nav_ticket"
        android:name="com.example.concertticket.TicketFragment"
        android:label="Ticket"
        tools:layout="@layout/fragment_ticket">
        <action
            android:id="@+id/action_ticketFragment_to_orderFragment"
            app:destination="@id/orderFragment" />
    </fragment>

    <fragment
        android:id="@+id/listFragment"
        android:name="com.example.concertticket.ListFragment"
        android:label="List"
        tools:layout="@layout/fragment_list" />
</navigation>
