<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderFragment"
    android:background="@drawable/bg_order">

    <!-- Header dengan efek elevation -->

    <!-- Card container untuk konten -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="444dp"
        android:layout_height="125dp"
        android:backgroundTint="@color/purple"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_ticket_icon"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_ticket" />

        <TextView
            android:id="@+id/tv_concert_tickets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Concert Ticket"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/order">


            <TextView
                android:id="@+id/order_ticket_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Ticket"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:textStyle="bold|italic"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="32dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Ticket Type"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <Spinner
                android:id="@+id/ticket_order_spinner"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/white"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginBottom="32dp"/>

            <Button
                android:id="@+id/Btnorderticket"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/button_bg"
                android:text="Buy Ticket Now"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:elevation="4dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>