<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TicketFragment"
    android:background="@drawable/tiket_bg">

    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/design_default_color_background"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    </LinearLayout>

    <!-- Ticket Icon -->
    <ImageView
        android:id="@+id/ticket_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ticket1"
        app:layout_constraintTop_toBottomOf="@+id/header_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/order_ticket_text"
        android:layout_marginTop="32dp" />

    <!-- Order Ticket Text -->
    <TextView
        android:id="@+id/order_ticket_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Ticket"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        android:fontFamily="sans-serif-condensed-medium"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/ticket_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Buy Ticket Button -->
    <Button
        android:id="@+id/buy_ticket_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Buy Ticket"
        android:fontFamily="sans-serif-condensed-medium"
        android:textSize="18sp"
        android:background="@drawable/rounded_button"
        app:layout_constraintTop_toBottomOf="@+id/order_ticket_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
